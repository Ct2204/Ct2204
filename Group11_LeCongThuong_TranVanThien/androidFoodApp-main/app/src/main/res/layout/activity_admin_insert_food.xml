<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminInsertFood">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:text="Food Name:"
        android:textSize="30dp"
        android:textColor="@color/blue"
        />

    <EditText
        android:id="@+id/etFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Food Name"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Food Description:"
        android:textColor="@color/blue"
        android:textSize="30dp"

        />

    <EditText
        android:id="@+id/etFoodDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Food Description"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/blue"
        android:textSize="30dp"

        android:text="Cost:" />

    <EditText
        android:id="@+id/etFoodCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Food Cost"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/blue"
        android:textSize="30dp"

        android:text="Food Picture:" />

    <ImageView
        android:id="@+id/ivFoodPicture"
        android:layout_width="172dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btFoodPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Picture"
        android:textColor="@color/blue"
        android:textSize="30dp"
        app:backgroundTint="@color/trangnhat" />

    <Button
        android:id="@+id/btFoodAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Into Database"
        android:textColor="@color/blue"
        android:textSize="30dp"
        app:backgroundTint="@color/trangnhat" />

    <Button
        android:id="@+id/btShowFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show food"
        android:textColor="@color/blue"
        android:textSize="30dp"
        app:backgroundTint="@color/trangnhat" />

    <ListView
        android:id="@+id/lvFoodList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>